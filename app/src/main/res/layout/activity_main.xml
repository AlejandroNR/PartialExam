<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alejandronarvaez.partialexam.MainActivity">


     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 1:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         android:textSize="27dp"
         style="@style/Base.TextAppearance.AppCompat.Subhead"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/NUM2"
         android:layout_alignEnd="@+id/NUM2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NUM1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:foreground="#fbf9f9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 2:"
        android:id="@+id/textView2"
        android:layout_below="@+id/NUM1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="27dp"
        style="@style/AlertDialog.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NUM2"
        android:foreground="#fafdfd"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/CAL"
        android:textSize="22dp"
        android:foregroundTint="#a7a1a1"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ERROR"
        android:layout_below="@+id/CAL"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comparison:"
        android:id="@+id/textView3"
        android:layout_below="@+id/ERROR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#1526da" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition+:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#0f16dc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtraction:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#1122dd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#132be8"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/COMPA"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/CAL"
        android:layout_toEndOf="@+id/CAL"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ADD"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/COMPA"
        android:layout_alignStart="@+id/COMPA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SUB"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/ADD"
        android:layout_alignStart="@+id/ADD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PROD"
        android:layout_alignLeft="@+id/SUB"
        android:layout_alignStart="@+id/SUB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DIVE"
        android:layout_alignLeft="@+id/PROD"
        android:layout_alignStart="@+id/PROD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAN"
        android:id="@+id/CLEAN"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/Tec"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_below="@+id/CLEAN"
        android:layout_alignRight="@+id/CAL"
        android:layout_alignEnd="@+id/CAL" />

</RelativeLayout>